            </div>
            <h3>{{dataValues.company}}</h3>
            <span>{{dataValues.title}}</span>
            <span>R${{dataValues.salary}}</span>
            <a href="/jobs/view/{{dataValues.id}}">Ver Vaga</a>
        </section>
        {{/each}}
       
    </main>
